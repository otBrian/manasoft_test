{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block stylesheets %}
	<link href="{{ asset('css/style.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}
	<header class="masthead">
		<div class="container h-100">
			<div class="row h-100 align-items-center justify-content-center text-center">
				<div class="col-md-6">
					<a class="btn btn-primary btn-block text-white mb-3" href="/">Home</a>
					<div class="content">
						<div class="content">
							<h2 class="text-uppercase text-white font-weight-bold">Login</h2>
							{% if app.user %}
								<div class="mb-3">
									You are logged in as
									{{ app.user.username }},
									<a href="{{ path('app_logout') }}">Logout</a>
								</div>
							{% endif %}
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{{ form_start(authForm) }}
							<div class="form-group">
								{{ form_row(authForm.email, {'attr': {'class': 'form-control text-dark','placeholder':'Email'}}) }}

							</div>
							<div class="form-group">
								{{ form_row(authForm.password, {'attr': {'class': 'form-control text-dark','placeholder':'Password'}}) }}


							</div>


							<button class="btn btn-lg btn-primary" type="submit">
								Sign in
							</button>

							{{ form_end(authForm) }}

						</div>
					</div>

				</div>
			</div>

		</div>
	</header>

{% endblock %}
