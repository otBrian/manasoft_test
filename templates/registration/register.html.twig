{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}
{% block stylesheets %}
	<link href="{{ asset('css/style.css') }}" rel="stylesheet">

{% endblock %}

{% block body %}
	<header class="masthead">
		<div class="container h-100">
			<div class="row h-100 align-items-center justify-content-center text-center">
				<div class="col-md-6">
					<a class="btn btn-primary btn-block text-white mb-3" href="/">Home</a>
					<div class="content">
						<h2 class="text-uppercase text-white font-weight-bold">Register</h2>
						{{ form_start(registrationForm) }}
						<div class="form-group text-white-75 font-weight-bold mb-5">

							{{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control text-dark','placeholder':'First Name'}}) }}

						</div>
						<div class="form-group text-white-75 font-weight-bold mb-5">
							{{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control text-dark','placeholder':'Last Name'}}) }}

						</div>
						<div class="form-group text-white-75 font-weight-bold mb-5">

							{{ form_row(registrationForm.email, {'attr': {'class': 'form-control text-dark','placeholder':'Email'}}) }}

						</div>
						<div class="form-group">
							{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control text-dark','placeholder':'Password'}}) }}

						</div>
						<div class="form-group">
							<label class="text-white-75 font-weight-bold mb-1">BirthDate</label>
							{{ form_row(registrationForm.birthdate, {'attr': {'class': ''}}) }}

						</div>

						<div class="form-group form-check text-white">

							{{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-label text-white'}}) }}

						</div>

						<button class="btn btn-primary text-white">Register</button>

						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>

		</div>
	</header>

{% endblock %}
